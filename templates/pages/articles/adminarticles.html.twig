{# pages/articles/articles.html.twig #}

{% extends "core/layoutadmin.html.twig" %}

{% block title %}
    {{ parent() }} - Articles
{% endblock %}

{% block head %}{% endblock %}


{% block body %}
<div class="row" style="padding-top: 10px;">
        <div class="col" style="padding-top: 0px;">
            <h1 class="text-center title-page" style="font-weight: 500;font-style: italic;font-family: 'Cedarville Cursive', cursive;color: rgb(0,29,58);">Gestion Articles</h1>
            <hr style="margin-top: 25px;">
        </div>
    </div>
    <div>
        <div class="container" style="width: 95%;max-width: 100%;margin-top:50px;">
            <div class="row">
                        <div class="col-md-2 col-lg-2 sticky-top"><a href="{{ path('admin')}}"><h4><i class="fas fa-arrow-left"></i> Retour à la liste</h4></a></div>

                <div class="col" style="padding-bottom: 30px;">
					<button onclick="window.location.href='{{ path('admin_articles_add') }}'" class="btn btn-light btn-lg addbutton" type="button" style="font-size: 20px;"><i class="fa fa-plus" style="font-size: 20px;"></i>&nbsp;Nouvel Article</button></div>
            </div>
			<div class="row">
                <div class="col-12">
                
			{% for  article in listArticles %}
                    <div class="row">
                        <div class="col-4 col-sm-3 col-md-2 col-lg-2 col-article-img"><img class="float-left article-img" src="{{ asset(article.url) }}"></div>
                        <div class="col-6 news-bg" style="padding: 15px 10px;">
                            <h1 class="newsblock-title-under-admin"><a href="{{ path('admin_article_view', {id: article.id}) }}">{{ article.title }}<a></h1>
                            <p class="paragraph-admin">{{article.Short }}&nbsp;<a href="{{ path('admin_article_view', {id: article.id}) }}"><span>Lire la suite&nbsp;<i class="fa fa-chevron-right" style="color: rgba(33,37,41,0.5);"></i></span></a><span style="color:grey; float: right; font-style:italic;"> - posté le: {{ article.datepost|date("d/m/Y") }} - </span></p>
                        </div>
                        <div class="col-2">
                            <h5 class="center">{{ article.status }}</h5>
                        </div>
                        <div class="col-2">
                            <div class="actioncenter"><span class="icon"> <a class="subscribe" href="{{ path('admin_article_view', {id: article.id}) }}"><i class="fa fa-eye actionicon"></i></a>
							<a class="flag" href="{{ path('admin_articles_modify', {id: article.id}) }}">&nbsp;&nbsp;<i class="fa fa-pencil actionicon"></i></a>
							<a class="flag" data-href="{{ path('admin_articles_delete', {id: article.id}) }}" data-toggle="modal" data-target="#confirm-delete">&nbsp;&nbsp;<i class="fa fa-trash-o actionicon"></i></a></span></div>
                        </div>
                    </div>
					{% endfor %}
                    
                    <div class="row article-row" style="padding-top: 10px;padding-bottom: 10px;">
                        <div class="col">
                            <nav aria-label="Page navigation example">
                                <ul class="pagination justify-content-center">
									<li class="page-item"><a class="page-link" href="{{ path('admin_articles', {'page': page-1}) }}" aria-label="Previous"><span aria-hidden="true">«</span></a></li>
								{% for p in range(1, nbPages) %}
									<li class="page-item {% if p == page %}active{% endif %}">
									  <a class="page-link" href="{{ path('admin_articles', {'page': p}) }}">{{ p }}</a>
									</li>
								 {% endfor %}
									<li class="page-item"><a class="page-link" href="{{ path('admin_articles', {'page': page+1}) }}" aria-label="Next"><span aria-hidden="true">»</span></a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block script %}{% endblock %}