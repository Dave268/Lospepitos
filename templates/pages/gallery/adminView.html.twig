{# pages/articles/articles.html.twig #}

{% extends "core/layout.html.twig" %}

{% block title %}
    {{ parent() }} - {{ title }}
{% endblock %}

{% block body %}
<div class="row" style="padding-top: 70px;background-color: rgb(255,252,243);">
        <div class="col" style="padding-top: 0px;">
            <h1 class="text-center title-page" style="font-weight: 500;font-style: italic;font-family: 'Cedarville Cursive', cursive;color: rgb(0,29,58);">{{ title }}</h1>
            <hr style="margin-top: 25px;">
        </div>
    </div>
<div class="container" style="padding-bottom: 50px;">
    <div class="row text-center text-lg-left">
    {% for photo in album %}
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-2"><img class="img-thumbnail img-fluid img-container" id="pop" src="{{ asset(photo) }}" alt=" "></div>
    {% endfor %}
    </div>
</div>
{% endblock %}

{% block script %}
<script>
    $('.container img').each(function ()
    {
        var currentImage = $(this);
        currentImage.wrap("<a href='" + currentImage.attr("src") + "' data-toggle='lightbox' data-gallery='example-gallery' class='d-block mb-4 h-100'></a>");
    });
    $(document).on('click', '[data-toggle="lightbox"]', function(event) {
            event.preventDefault();
            $(this).ekkoLightbox();
        });
</script>
{% endblock %}